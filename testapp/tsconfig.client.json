{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "moduleResolution": "node",
    "rootDir": "public/ts",
    "outDir": "public/js",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": []
  },
  "include": ["public/ts/**/*"],
  "exclude": ["node_modules"]
}